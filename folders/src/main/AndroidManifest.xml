<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.opensilk.music.plugin.folders">

    <application>

        <activity android:name=".ui.StorageLocationPicker"
                  android:exported="true"
                  android:theme="@style/AppThemeTranslucentDark"/>

        <service android:name=".FolderLibraryService"
                 android:icon="@drawable/ic_folder_grey600_24dp"
                 android:label="@string/folders_plugin_name"
                 android:description="@string/folders_plugin_description"
                 android:permission="org.opensilk.music.api.permission.BIND_LIBRARY_SERVICE_PROTECTED">
            <intent-filter>
                <action android:name="org.opensilk.music.plugin.LIBRARY_SERVICE" />
            </intent-filter>
        </service>

    </application>

</manifest>
